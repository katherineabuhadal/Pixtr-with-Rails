<h2><%= @gallery.name %></h2>
<p>Gallery owned by <%= @gallery.user.email %></p>
<p><%= @gallery.description %></p>
<% if current_user == @gallery.user %>
  <h5>
  <%= link_to "Edit Gallery", [:edit, @gallery] %> |
  <%= link_to "Delete Gallery", [@gallery], method: :delete %> |
  <%= link_to "Add an image", [:new, @gallery, :image] %> 
  </h5>
    <% end %>

<%= render "likes", target: @gallery %>
<div>
  <% @gallery.images.each do |image| %>
    <div>
    <%= link_to image do %>
      <%=  image_tag image.url %>
  </div>
<% end %>
  <h5>
    <%= link_to "Edit image", [:edit, image] %> |
    <%= link_to "View Image", [image] %> |
    <%= link_to "Delete Image", [image], method: :delete %> 
    | created
    <%= time_ago_in_words image.created_at %>
    ago
  </h5>
<% end %>
</div>

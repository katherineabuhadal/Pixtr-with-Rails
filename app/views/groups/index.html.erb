<h2>Groups Page</h2>

<ul>
  <% @groups.each do |group| %>
    <li>
    <%= group.name %> // <%= group.description %>
    <% if ! current_user.member?(group) %>
  <%= form_for [group, @group_membership] do |form| %>
    <%= form.submit "Join this group" %>
  <% end %>
  <% end %>
  </li>
  <% end %>
</ul>
